{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "group:all",
    "workarounds:all"
  ],
  "branchConcurrentLimit": 0,
  "ignorePaths": ["hack"],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["replace"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "github.com/aperturerobotics/common",
        "@aperturerobotics/ts-common",
        "starpc"
      ],
      "enabled": false
    }
  ]
}
