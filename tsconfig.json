{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@go/*": ["vendor/*"]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "remove",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["webworker", "dom"]
  },
  "exclude": ["node_modules", "vendor", "dist", "tools/vendor"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": true
  }
}
